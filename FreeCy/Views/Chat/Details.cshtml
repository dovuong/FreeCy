

@model IEnumerable<Models.Framework.Message>

@{
    Layout = null;
    var idd = ViewBag.idus;
    List<Models.Framework.MessList> listmess = ViewBag.ListMess;
}




<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Freecy - Kết nối Freelancer và Doanh Nghiệp</title>
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="author" content="Themesdesign" />

    <link rel="shortcut icon" href="~/images/logo-f.ico" />

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css" />

    <!--Material Icon -->
    <link rel="stylesheet" type="text/css" href="~/css/materialdesignicons.min.css" />

    <link rel="stylesheet" type="text/css" href="~/css/fontawesome.css" />

    <!-- selectize css -->
    <link rel="stylesheet" type="text/css" href="~/css/selectize.css" />

    <link rel="stylesheet" type="text/css" href="~/css/nice-select.css" />

    <!-- Custom  Css -->
    <link rel="stylesheet" type="text/css" href="~/css/style2.css" />

 
</head>
<body>
    @foreach(var i in ViewBag.ListMess)
    {
    <p>@i.UpdateTime</p>
    }

    <!-- JOB DETAILS START -->
    <section class="section">
        <div class="container">
            <div class="page-content page-container" id="page-content">
                <div class="">
                    <div class="">
                        <div class="col-12">
                            <div class="card card-bordered">
                                <div class="card-header">
                                    <h4 class="card-title"><strong>@ViewBag.Name</strong></h4>
                                </div>
                                <div class="ps-container ps-theme-default ps-active-y" id="chat-content"
                                     style="overflow-y: scroll !important; height:400px !important;">
                                    
                                    @foreach (var item in Model)
                                    {
                                        if (item.ID_User != idd)
                                        {
                                            <div class="media media-chat media-chat-reverse">
                                                <div class="media-body">
                                                    <p>@item.Contents</p>
                                                    <p class="meta"><time>@item.CreatedAt</time></p>
                                                </div>
                                            </div>

                                        }

                                        else
                                        {
                                            <div class="media media-chat">
                                                <img class="avatar"
                                                     src="https://img.icons8.com/color/36/000000/administrator-male.png"
                                                     alt="...">
                                                <div class="media-body">
                                                    <p>@item.Contents</p>

                                                    <p class="meta"><time>@item.CreatedAt</time></p>
                                                </div>
                                            </div>

                                        }


                                    }
                                  

                                    <div class="ps-scrollbar-x-rail" style="left: 0px; bottom: 0px;">
                                        <div class="ps-scrollbar-x" tabindex="0" style="left: 0px; width: 0px;"></div>
                                    </div>
                                    <div class="ps-scrollbar-y-rail" style="top: 0px; height: 0px; right: 2px;">
                                        <div class="ps-scrollbar-y" tabindex="0" style="top: 0px; height: 2px;"></div>
                                    </div>
                                </div>
                                @using (Html.BeginForm("PostMessage", "Chat", FormMethod.Post))
                                {
                                    <input type="text" name="Contents" style="width:50%;height:25%" />
                                    <br />
                                    <input type="hidden" name="ID_MessRoom" value="@ViewBag.IdRoom" />
                                    <input type="submit" value="Post Message" class="btn btn-success" style="margin-top:10px" />
                                    <input type="hidden" name="Iduser" value="@ViewBag.idus" />
                                }
                                @*<div class="publisher bt-1 border-light">
                                        <img class="avatar avatar-xs"
                                             src="https://img.icons8.com/color/36/000000/administrator-male.png" alt="...">
                                        <input class="publisher-input" type="text" placeholder="Write something"> <span class="publisher-btn file-group">
                                            <i class="fa fa-paperclip file-browser"></i>
                                            <input type="file" id="myfile" name="myfile">
                                        </span> <a class="publisher-btn"
                                                   href="#" data-abc="true"><i class="fa fa-smile"></i></a> <a class="publisher-btn text-info" href="#" data-abc="true">
                                            <i class="fa fa-paper-plane"></i>
                                        </a>
                                    </div>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- JOB DETAILS END -->

    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/jquery.easing.min.js"></script>
    <script src="js/plugins.js"></script>
    <!-- selectize js -->
    <script src="js/selectize.min.js"></script>
    <script src="js/jquery.nice-select.min.js"></script>

    <script src="js/app.js"></script>
    <Script>
    var objDiv = document.getElementById("chat-content");
        objDiv.scrollTop = objDiv.scrollHeight;</Script>

</body>
</html>
